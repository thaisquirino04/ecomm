{
    "openapi": "3.0.3",
    "info": {
        "title": "API Account",
        "description": "Esta é uma api para manipulação de contas de usuários do ecomm.",
        "contact": {
            "email": "thais.quirino@pagonxt.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/accounts": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "Cadastro de conta",
                "description": "Essa rota será responsável por cadastrar uma nova conta",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Account"
                            },
                            "examples": {
                                "account": {
                                    "value": {
                                        "name": "Thais",
                                        "email": "thais@gmail.com",
                                        "password": "080114"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Error creating user!"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "account": {
                                        "value": {
                                            "id": "2235c7ce-7092-447d-851a-ec156a579af1",
                                            "name": "Thais",
                                            "email": "thais@gmail.com",
                                            "date": "2022-12-22"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Account": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        }
    }
}