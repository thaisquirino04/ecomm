{
    "openapi": "3.0.3",
    "info": {
        "title": "API Product",
        "description": "Esta é uma api para manipulação de produtos do eccomerce.",
        "contact": {
            "email": "thais.quirino@pagonxt.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/products": {
            "post":{
                 "tags": [
                    "Product"
                ],
                "summary": "Cadastro de produtos",
                "description": "Essa rota será responsável por cadastrar um novo produto",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "produto": {
                                            "nome": "Consórcio",
                                            "valor": 500,
                                            "quantidade": 1,
                                            "descricao": "Mude de vida, saia do aluguel sem burocrácia",
                                            "categoria": "Consórcios",
                                            "caracteristicas": [
                                                {
                                                    "nome": "Produto bancário",
                                                    "descricao": "Consórcio"
                                                }
                                            ],
                                            "imagens": [
                                                {
                                                    "url": "https://www.canva.com/design/DAFT_oaKJpc/view'",
                                                    "descricao": "Imagem Consórcio"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Error creating product!"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "products": {
                                        "value": {
                                            "id": "6d607f6a-3625-45df-884a-d2a479680393",
                                            "createdDate": "2022-12-22",
                                            "produto": {
                                                "nome": "Consórcio",
                                                "valor": 500,
                                                "quantidade": 1,
                                                "descricao": "Mude de vida, saia do aluguel sem burocrácia",
                                                "categoria": "Consórcios",
                                                "caracteristicas": [
                                                    {
                                                        "nome": "Produto bancário",
                                                        "descricao": "Consórcio"
                                                    }
                                                ],
                                                "imagens": [
                                                    {
                                                        "url": "https://www.canva.com/design/DAFT_oaKJpc/view",
                                                        "descricao": "Imagem Consórcio"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "lista de produtos cadastrados",
                "description": "Essa rota será responsável por listar os produtos cadastrados",
                "responses": {
                    "500": {
                        "description": "Error fetching products!"
                    },
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "products": {
                                        "value": {
                                            "id": "6d607f6a-3625-45df-884a-d2a479680393",
                                            "createdDate": "2022-12-22",
                                            "produto": {
                                                "nome": "Consórcio",
                                                "valor": 500,
                                                "quantidade": 1,
                                                "descricao": "Mude de vida, saia do aluguel sem burocrácia",
                                                "categoria": "Consórcios",
                                                "caracteristicas": [
                                                    {
                                                        "nome": "Produto bancário",
                                                        "descricao": "Consórcio"
                                                    }
                                                ],
                                                "imagens": [
                                                    {
                                                        "url": "https://www.canva.com/design/DAFT_oaKJpc/view",
                                                        "descricao": "Imagem Consórcio"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "valor": {
                        "type": "number"
                    },
                    "quantidade": {
                        "type": "number"
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "categoria": {
                        "type": "string"
                    },
                    "caracteristicas": {
                        "type": "array",
                        "items": {
                            "nome": "string",
                            "descricao": "string"
                        }
                    },
                    "imagens": {
                        "type": "array",
                        "items": {
                            "url": "string",
                            "descricao": "string"
                        }
                    }
                }
            }
        }
    }
}